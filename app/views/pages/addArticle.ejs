<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/head.ejs %>
        <% include ../partials/scripts.ejs%>
    </head>
    
    <body>
        
        <div id="wrap">
            <header>
                <% include ../partials/header.ejs %>
            </header>
            
            <div class="container">
                <% include ../partials/flash.ejs %>
                <div class="row">
                    <div class="col-md-12">
                        <form id="addArticle" name="addArticle" method="post" action="/app/addArticle">
                            <legend>New article</legend>
                            <% include ../partials/csrfToken.ejs %>
                            <label for="title">Title</label>
                            <input id="title" type="text" name="title" class="form-control" required>
                            <label for="article">Post</label>
                            <textarea id="article" name="article" class="form-control" required></textarea>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </form>
                        <form>
                            <a class="btn btn-warning" href="/app/edit">Cancel</a>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
        
        <footer id="footer">
            <% include ../partials/footer.ejs %>
        </footer>
        
    </body>
</html>