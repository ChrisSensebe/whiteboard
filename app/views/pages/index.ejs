<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/head.ejs %>
        <% include ../partials/scripts.ejs%>
    </head>
    
    <body>
        
        <div id="wrap">
            <header>
                <% include ../partials/header.ejs %>
            </header>
            
            <div class="container">
                <% include ../partials/flash.ejs %>
                <div class="row">
                    <div class="col-md-12">
                        <h1>Articles</h1>
                        <% articles.forEach(function(article){ %>
                        <h3><%= article.title %></h3>
                        <p>
                            Author : <%= article.author %><br>
                            Created: <%= article.created.getUTCDate() + '/' + String(parseInt(article.created.getMonth())+1) + '/' + article.created.getFullYear() %><br>
                            <a href="/article/<%= article._id %>">View article</a><br>
                        </p>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
        
        <footer id="footer">
            <% include ../partials/footer.ejs %>
        </footer>
        
    </body>
</html>