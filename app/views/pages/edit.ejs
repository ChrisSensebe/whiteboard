<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/head.ejs %>
        <% include ../partials/scripts.ejs%>
    </head>
    
    <body>
        
        <div id="wrap">
            <header>
                <% include ../partials/header.ejs %>
            </header>
            
            <div class="container">
                <% include ../partials/flash.ejs %>
                <div class="row">
                    <div class="col-md-12">
                       <h1><%= title %></h1>
                        <% articles.forEach(function(article){ %>
                            <h3><%= article.title %></h3>
                            <p>
                                Author : <%= article.author %><br>
                                Created : <%= article.created.getUTCDate() + '/' + String(parseInt(article.created.getMonth())+1) + '/' + article.created.getFullYear() %><br>
                                <a href="/app/editArticle/<%= article._id %>">Edit</a><br>
                            </p>
                            <form id="delArticle" name="delArticle" method="post" action="/app/deleteArticle">
                                <% include ../partials/articleId.ejs %>
                                <% include ../partials/csrfToken.ejs %>
                                <button type='submit' class="btn btn-danger">Delete article</button>
                            </form>
                        <% }); %>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-12">
                        <a href="/app/addArticle">Create new article</a><br>
                    </div>
                </div>
                
            </div>
        </div>
        
        <footer id="footer">
            <% include ../partials/footer.ejs %>
        </footer>
        
    </body>
</html>